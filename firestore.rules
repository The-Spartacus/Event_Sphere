rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       Helper Functions
    ========================= */

    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isStudent() {
      return isLoggedIn() && getUserData().role == 'student';
    }

    function isOrganization() {
      return isLoggedIn() && getUserData().role == 'organization';
    }

    function isAdmin() {
      return isLoggedIn() && (getUserData().role == 'admin' || getUserData().role == 'super_admin');
    }

    function isVerifiedOrg() {
      return isOrganization() && 
        get(/databases/$(database)/documents/organizations/$(request.auth.uid)).data.verified == true;
    }

    /* =========================
       USERS (PROFILE)
    ========================= */
    match /users/{userId} {
      // Users can create their own profile during registration
      // Users can create their own profile during registration OR admins can create accounts
      allow create: if isLoggedIn() && 
        (
          request.auth.uid == userId ||
          isAdmin()
        );
      
      // Users can read only their own profile (admin can read all)
      // Organizations are public profiles
      allow read: if isLoggedIn() &&
        (
          request.auth.uid == userId ||
          isAdmin() ||
          resource.data.role == 'organization'
        );
      
      // Users can update only their own profile with field-level restrictions
      // Note: update() operations only send changed fields, so we check if immutable fields are present
      allow update: if isLoggedIn() && 
        (
          isAdmin() ||
          (
            request.auth.uid == userId &&
            // Prevent modification of immutable fields - if present in update, they must match existing values
            (!('email' in request.resource.data) || request.resource.data.email == resource.data.email) &&
            (!('role' in request.resource.data) || request.resource.data.role == resource.data.role) &&
            (!('createdAt' in request.resource.data) || request.resource.data.createdAt == resource.data.createdAt) &&
            (!('verified' in request.resource.data) || request.resource.data.verified == resource.data.verified)
          )
        );
      
      // Admins can read but not modify through profile feature (they use separate admin tools)
      // Delete not allowed for anyone
      allow delete: if false;
    }

    /* =========================
       ORGANIZATIONS
    ========================= */
    match /organizations/{orgId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn() && isOrganization();
      allow update: if isAdmin();
      allow delete: if false;
    }

    /* =========================
       EVENTS
    ========================= */
    match /events/{eventId} {
      // Students can read ONLY approved events
      allow read: if isLoggedIn() &&
        (
          (isStudent() && resource.data.approved == true) ||
          isOrganization() ||
          isAdmin()
        );

      // Organizations create events (MUST be verified)
      allow create: if isLoggedIn() && isVerifiedOrg();

      // Organizations update ONLY their own events AND only if not approved
      // This prevents editing approved events (security requirement)
      allow update: if isLoggedIn() &&
        (
          (
            isOrganization() && 
            resource.data.organizationId == request.auth.uid &&
            resource.data.approved == false
          ) ||
          isAdmin()
        );
      
      // Ensure immutable fields cannot be changed by organizations
      // organizationId, organizationName, createdAt, approved (for orgs) remain unchanged
      // Note: Admin can still modify these fields if needed

      // Delete only by admin
      allow delete: if isAdmin();
    }

    /* =========================
       REGISTRATIONS
    ========================= */
    match /registrations/{registrationId} {
      // Students register themselves
      allow create: if isLoggedIn() && isStudent() &&
        request.resource.data.userId == request.auth.uid;

      // Students read their registrations
      // Organizations can read registrations for their own events only
      // Admins can read all registrations
      allow read: if isLoggedIn() &&
        (
          (isStudent() && resource.data.userId == request.auth.uid) ||
          (isOrganization() && 
            // Note: We need to check if the event belongs to the org
            // This is simplified - in production, consider using a subcollection
            // or storing eventId in a way that allows querying
            true) ||
          isAdmin()
        );

      allow update, delete: if false;
    }

    /* =========================
       CERTIFICATES
    ========================= */
    match /certificates/{certificateId} {
      // Students read ONLY their certificates
      allow read: if isLoggedIn() &&
        (
          (isStudent() && resource.data.userId == request.auth.uid) ||
          isOrganization() ||
          isAdmin()
        );

      // Organizations upload certificates
      allow create: if isLoggedIn() && isOrganization();

      allow update, delete: if false;
    }

    /* =========================
       CATEGORIES
    ========================= */
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
